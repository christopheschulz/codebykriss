---
interface Props {
  title: string;
  description: string;
  icon: string;
  badge: string;
  badgeType?: 'default' | 'success' | 'premium' | 'info' | 'quality';
}

const { title, description, icon, badge, badgeType = 'default' } = Astro.props;

const badgeClasses: Record<string, string> = {
  default: 'bg-primary-600',
  success: 'bg-success',
  premium: 'bg-purple-500',
  info: 'bg-primary-600',
  quality: 'bg-warning',
};
---

<div class="contact-card bg-white/95 rounded-2xl p-5 text-center backdrop-blur-lg shadow-lg border border-white/20 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
  <div class="card-icon inline-flex items-center justify-center w-12 h-12 bg-primary-600 text-white rounded-xl mb-3">
    <Fragment set:html={icon} />
  </div>
  <h4 class="text-base font-semibold text-neutral-900 mb-2">{title}</h4>
  <p class="text-neutral-600 text-sm mb-3">{description}</p>
  <span class:list={[
    "contact-badge inline-block py-1 px-3 text-xs font-semibold uppercase tracking-wider rounded-full text-white",
    badgeClasses[badgeType]
  ]}>
    {badge}
  </span>
</div>
